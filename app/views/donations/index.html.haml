
.row
  .col-md-4
    .well.text-center
      %h4=number_to_currency @donation_amounts[:week]
      %h3 This Week
  .col-md-4
    .well.text-center
      %h4=number_to_currency @donation_amounts[:month]
      %h3 This Month
  .col-md-4
    .well.text-center
      %h4=number_to_currency @donation_amounts[:total]
      %h3 All Time

%table.table.table-striped
  %thead
    %tr
      %th Date
      %th Time
      %th Donation From
      %th Amount
  %tbody
    - @donations.each do |donation|
      %tr
        %td= donation.created_at.in_time_zone.strftime('%b %d, %Y')
        %td= donation.created_at.in_time_zone.strftime('%I:%M %P')
        %td= donation.user.email
        %td= number_to_currency donation.amount
